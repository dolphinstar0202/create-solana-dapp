{
  "$schema": "http://json-schema.org/schema",
  "$id": "ReactFeatureSchema",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the feature?"
    },
    "feature": {
      "type": "string",
      "enum": ["anchor-counter", "anchor-basic", "none"],
      "description": "The feature to generate",
      "x-prompt": "Which feature would you like to generate?"
    },
    "anchorName": {
      "type": "string",
      "description": "Name of the Anchor project in the workspace",
      "default": "anchor"
    },
    "anchorProgramName": {
      "type": "string",
      "description": "Anchor program name",
      "x-prompt": "What is the name of the anchor program?"
    },
    "webName": {
      "type": "string",
      "description": "Name of the web application (overrides name)",
      "default": "web"
    },
    "ui": {
      "description": "The UI library to use",
      "type": "string",
      "enum": ["none", "tailwind"],
      "default": "tailwind",
      "x-prompt": "Which UI library would you like to use?"
    },
    "npmScope": {
      "type": "string",
      "description": "The npm scope to use"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    }
  },
  "required": ["name"]
}
