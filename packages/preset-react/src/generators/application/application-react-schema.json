{
  "$schema": "http://json-schema.org/schema",
  "$id": "ApplicationReactSchema",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the application",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "appName": {
      "type": "string",
      "description": "Name of the application (overrides name)"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "uiLibrary": {
      "description": "The UI library to use",
      "type": "string",
      "enum": ["none", "tailwind"],
      "default": "tailwind"
    },
    "withAnchor": {
      "description": "Create an anchor program",
      "type": "boolean",
      "default": true
    },
    "anchorName": {
      "type": "string",
      "description": "Anchor project name",
      "default": "program"
    },
    "anchorTemplate": {
      "type": "string",
      "enum": ["counter", "hello-world"],
      "description": "The template to use",
      "default": "counter"
    }
  },
  "required": ["name"]
}
