{
  "$schema": "http://json-schema.org/schema",
  "$id": "Application",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "template": {
      "type": "string",
      "enum": ["counter", "hello-world"],
      "description": "The template to use",
      "default": "counter"
    }
  },
  "required": ["name"]
}
